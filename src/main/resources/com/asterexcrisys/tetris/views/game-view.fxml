<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="gamePane" prefHeight="800.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="com.asterexcrisys.tetris.controllers.GameController">
    <HBox alignment="CENTER" prefHeight="800.0" prefWidth="600.0">
        <AnchorPane prefHeight="800.0" prefWidth="200.0">
            <VBox alignment="CENTER" prefHeight="800.0" prefWidth="200.0" spacing="50.0" style="-fx-background-color: #103cd6; -fx-border-color: #ffffff; -fx-border-width: 5;">
            <Label fx:id="levelLabel" alignment="CENTER" text="Level: 1" textFill="WHITE">
               <font>
                  <Font name="System Bold Italic" size="24.0" />
               </font>
            </Label>
            <Label fx:id="scoreLabel" alignment="CENTER" text="Score: 0" textFill="WHITE">
               <font>
                  <Font name="System Bold Italic" size="24.0" />
               </font>
            </Label>
                <Button fx:id="startButton" mnemonicParsing="false" onAction="#onStartButtonClick" prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: #009246;" text="Start">
                    <font>
                        <Font name="System Bold Italic" size="20.0" />
                    </font>
                </Button>
                <Button fx:id="leaderboardButton" layoutX="60.0" layoutY="385.0" mnemonicParsing="false" onAction="#onLeaderboardButtonClick" prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: #ffffff;" text="Leaderboard">
                    <font>
                        <Font name="System Bold Italic" size="20.0" />
                    </font>
                </Button>
                <Button fx:id="creditsButton" layoutX="60.0" layoutY="435.0" mnemonicParsing="false" onAction="#onCreditsButtonClick" prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: #ce2b37;" text="Credits">
                    <font>
                        <Font name="System Bold Italic" size="20.0" />
                    </font>
                </Button>
            </VBox>
        </AnchorPane>
        <StackPane prefHeight="800.0" prefWidth="400.0">
            <GridPane fx:id="boardPane" alignment="CENTER" prefHeight="800.0" prefWidth="400.0" style="-fx-background-color: #000055;" StackPane.alignment="CENTER">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                </rowConstraints>
            </GridPane>
            <AnchorPane fx:id="menuPane" prefHeight="800.0" prefWidth="400.0" style="-fx-background-color: #ffffff80;" visible="false" StackPane.alignment="CENTER">
                <VBox alignment="CENTER" prefHeight="800.0" prefWidth="400.0" spacing="50.0">
                    <Label fx:id="menuLabel" text="GAME OVER" textFill="#103cd6">
                        <font>
                            <Font name="System Bold Italic" size="36.0" />
                        </font>
                    </Label>
                </VBox>
            </AnchorPane>
        </StackPane>
    </HBox>
</AnchorPane>
